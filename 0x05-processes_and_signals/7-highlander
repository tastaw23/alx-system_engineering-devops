#!/usr/bin/env bash
# This script displays "To infinity and beyond" indefinitely
# With a sleep of 2 in between each iteration
# Responds to SIGTERM signal with "I am invincible!!!"

# Function to handle SIGTERM signal
terminate() {
    echo "I am invincible!!!"
    exit 0
}

# Register the terminate function to handle SIGTERM
trap terminate SIGTERM

# Infinite loop
while true; do
    echo "To infinity and beyond"
    sleep 2
done

