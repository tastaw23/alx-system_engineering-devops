#!/usr/bin/env bash
# Script that displays information about subdomains

# Function to query DNS and extract relevant information
get_dns_info() {
    local domain="$1"
    local subdomain="$2"
    dig_output=$(dig +short "$subdomain.$domain")
    if [[ -n "$dig_output" ]]; then
        record_type=$(dig +short "$subdomain.$domain" | awk '{print toupper($1)}')
        destination=$(dig +short "$subdomain.$domain")
        echo "The subdomain $subdomain is a $record_type record and points to $destination"
    fi
}

# Main function
main() {
    local domain="$1"
    local subdomain="$2"
    if [[ -z "$subdomain" ]]; then
        subdomains=("www" "lb-01" "web-01" "web-02")
        for sub in "${subdomains[@]}"; do
            get_dns_info "$domain" "$sub"
        done
    else
        get_dns_info "$domain" "$subdomain"
    fi
}

# Execute main function with provided arguments
main "$@"
