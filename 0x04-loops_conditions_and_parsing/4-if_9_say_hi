#!/usr/bin/env bash
# This script displays "Best School" 10 times, and for the 9th iteration, it displays "Best School" and then "Hi" on a new line

# Initializing a counter
counter=0

# Using a while loop to display "Best School" 10 times
while [ $counter -lt 10 ]; do
    if [ $counter -eq 8 ]; then
        echo "Best School"
        echo "Hi"
    else
        echo "Best School"
    fi
    ((counter++))
done

