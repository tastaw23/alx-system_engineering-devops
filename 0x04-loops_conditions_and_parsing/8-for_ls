#!/usr/bin/env bash
# This script displays the content of the current directory in a list format,
# showing only the part of the name after the first dash

# Using a for loop to iterate over files in the current directory
for file in *; do
    # Checking if the file is not hidden and has a dash in its name
    if [ ! -h "$file" ] && [ -f "$file" ] && [[ "$file" == *-* ]]; then
        # Extracting the part of the name after the first dash
        name_after_dash=$(echo "$file" | cut -d'-' -f2-)
        echo "$name_after_dash"
    fi
done

