#!/usr/bin/env bash
# This script changes the resolution of localhost and facebook.com

# Backup the original hosts file
sudo cp /etc/hosts /etc/hosts_backup

# Change localhost resolution to 127.0.0.2
sudo sed -i 's/127.0.0.1/127.0.0.2/' /etc/hosts

# Change facebook.com resolution to 8.8.8.8
sudo sed -i 's/157.240.11.35/8.8.8.8/' /etc/hosts

# Display success message
echo "Resolution changed successfully!"

# To revert the changes, uncomment the lines below and run the script
# sudo cp /etc/hosts_backup /etc/hosts
# echo "Reverted to original resolution!"

